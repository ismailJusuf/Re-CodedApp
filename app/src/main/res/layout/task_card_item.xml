<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/post_type_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/post_type_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:textColor="#fff"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/add_calendar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="3dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/calendar"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/card_task_image_view"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_below="@+id/post_type_relative_layout"
                android:scaleType="centerCrop"
                android:src="@drawable/student" />

            <LinearLayout
                android:id="@+id/publisher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_task_image_view"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/card_user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/card_user_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="6.8sp"
                    android:text="Abdullah Al-Jadaan"
                    android:textColor="#165378"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/card_task_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/publisher_name"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="2sp"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="My name is Abdullah. I was born and raised in Al-Hasakah in Syria ...." />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>