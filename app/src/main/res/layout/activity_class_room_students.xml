<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.isma3el.re_codedapp.Activities.ClassRoomStudentsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/class_room_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#242424"
        >

        <ImageView
            android:id="@+id/class_room_student_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back" />


    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/list_class_mates_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:divider="@null" />

</LinearLayout>
